<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MyWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" id="navigationbar">
            <div class="Nav_left">
                 <a asp-area="" asp-page="/Index">
                    <img class="logo" src="https://media.discordapp.net/attachments/1037658643539173476/1050455513218945184/img.png">
                </a>
            </div>
            <ul class="Nav_right">
                <div class="Nav_menu">
                    <li>
                        <a asp-area="" asp-page="/Index">
                            <button class="Nav_buttons">
                                Home
                            </button>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-page="/OverOns">
                            <button class="Nav_buttons">
                                Over ons
                            </button>
                        </a>
                    </li>
                    <li>
                        <a asp-area="" asp-page="/Download">
                            <button class="Nav_buttons">
                                Download
                            </button>
                        </a>
                    </li>
                </div>
            </ul>    
        </nav>
    </header>
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - inNLburgering - <a class="Privacy_button" asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>