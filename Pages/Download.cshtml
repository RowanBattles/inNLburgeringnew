@page
@model DownloadModel

<h1>@ViewData["Title"]</h1>

<style>
  #DownloadButton{
    background-color: #ff7200 ;
    border-radius: 15px ;
    border-style: solid ;
    border-color: rgb(90, 90, 90) ;
    border-width: 2px ;
    transition: 0.2s ease;
    color: white;
    padding: 12px 0;
  }

  .Tekst{
    text-align: center;
    margin-bottom: 16px !important;
  } 

  .Titel{
    font-weight: bold !important;
  }

  .HoldContainer{
    display: flex;
    justify-content: center;
  }

  .DownloadContainer{
    background-color: #3366ff;
    border-color: black;
    border-width: 1px;
    border-style: solid;
    width: 75%;
    padding: 16px 5%;
    border-radius: 25px;
    margin-top: 5%;
  }

  .DownloadButtons{
    width: 95%;
    border-radius: 15px;
    border-color: lightgray;
    border-style: solid;
    border-width: 4px;
  }

  .DownloadButtons:hover{
    border-color: #ff7200;
    cursor: pointer;
  }

  .ButtonClass{
    display: flex;
    flex-direction: row;
    flex: 1;
    justify-content: space-between;
  }

</style>

<div class="HoldContainer">
  <div class="DownloadContainer">
      <div>
          <h1 class="Titel">Download</h1>
      </div>
      <div>
          <p class="Tekst">
              Hier kun je ons app downloaden op IOS, Android of op uw Windows laptop/computer!
          </p>
      </div>
      <div class="ButtonClass">
        <a href="https://play.google.com/store/apps/details?id=com.InNLburgeringapp&pli=1">
          <img class="DownloadButtons" src="https://contentgrid.thdstatic.com/hdus/en_US/DTCCOMNEW/fetch/NexGen/ContentPage/androidbadgesbox2.png">
        </a>
        <a>
          <img class="DownloadButtons" src="https://media.discordapp.net/attachments/1037658188620763147/1065638977610186872/TEst.png">
        </a>    
      </div>
  </div>
</div>